@page
@model Identity.Api.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserViewModel.Id" />
            <div class="form-group">
                <label asp-for="UserViewModel.Username" class="control-label"></label>
                <input asp-for="UserViewModel.Username" class="form-control" readonly/>
                <span asp-validation-for="UserViewModel.Username" class="text-danger"></span>
            </div>
            @{

                for(var i = 0; i < Model.UserViewModel.Roles.Count; i++)
                {
                    var role = Model.UserViewModel.Roles.ElementAt(i);
                
                    <div class="form-group">
                        <input id="SelectedRoles" name="SelectedRoles" type="checkbox" checked="@role.Checked" value="@role.RoleName" /> @role.RoleName <br/>
                    </div>
                }    
            }
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
