@page
@model Identity.Api.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>UserViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserViewModel.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserViewModel.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserViewModel.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserViewModel.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserViewModel.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserViewModel.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserViewModel.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserViewModel.Email)
        </dd>
        
        <table class="table">
            <thead>
                <th>Name</th>
                <th>Value</th>
            </thead>
            <tbody>
                @foreach (var claim in Model.UserViewModel.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            </tbody>
        </table>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.UserViewModel.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
